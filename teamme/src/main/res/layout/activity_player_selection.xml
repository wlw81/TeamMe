<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ddadsa"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <data>
        <import type="android.view.View" />

        <variable
            name="assignments"
            type="java.util.List" />
    </data>



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:id="@+id/playerSelectionBlankTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_bigger_margin"
            android:layout_gravity="center"
            android:text="@string/gameempty"
            android:textColor="@color/active"
            android:textSize="@dimen/big_text"
            android:visibility="@{assignments.size() > 0 ? View.GONE : View.VISIBLE}" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/playerSelectionRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/playersAssignedFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/check"
            app:elevation="6dp"
            app:layout_anchor="@id/playerSelectionRV"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="de.pasligh.android.teamme.tools.FABfloat"
            app:pressedTranslationZ="16dp" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/playerSelectionAB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/gameCreatorTB"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                android:background="@color/active"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>