<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/accent_color</item>
    </style>



    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/TeamMeActionBar</item>
        <item name="android:progressBarStyleHorizontal">@style/TeamMeProgressBar</item>
        <item name="colorAccent">@color/accent_color</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TeamMeActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/active</item>
        <item name="logo">@drawable/actionbar</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="TeamMeProgressBar" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <!--
	Leider gibt es noch keine Möglichkeit den ColorFilter für die Progessbar
	via XML zu setzen ... hier können wir zukünftig den programatischen Weg ablösen.
        -->

    </style>

    <style name="SpecialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accent_color</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
    </style>


</resources>