<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <item name="android:colorPrimary">@color/active</item>
        <item name="android:colorPrimaryDark">@color/inactive</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- enable overlapping of exiting and entering activities -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:colorButtonNormal">@color/accent_color</item>
        <item name="actionBarStyle">@style/TeamMeActionBar</item>
        <item name="android:progressBarStyleHorizontal">@style/TeamMeProgressBar</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="TeamMeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:progressBarStyleHorizontal">@style/TeamMeProgressBar</item>
        <item name="android:colorPrimary">@color/active</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorButtonNormal">@color/accent_color</item>
        <item name="background">@color/active</item>
        <item name="logo">@drawable/actionbar</item>
        <item name="android:colorPrimaryDark">@color/inactive</item>
    </style>

</resources>